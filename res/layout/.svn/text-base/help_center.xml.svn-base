<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/help_bg_b"
        android:gravity="center_vertical"
        android:paddingLeft="40dp"
        android:text="美咖来了帮助说明"
        android:textColor="#101119"
        android:textSize="14sp" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/help_bg_w"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="1. 如何进行预约服务"
                android:textColor="#101119"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/help_dot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:text="点击预约服务后，您需要选择您喜欢的妆类，您想要预约的服务时间、造型师及服务地点，确认所有的信息后，点击立即支付就完成您的预约了。" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/help_bg_w"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="2. 如何进行立即服务？"
                android:textColor="#101119"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/help_dot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:text="点击立即服务后，您只需要选择服务的妆类及服务地点就会发布需求，造型师以抢单的方式接取订单。当需求被抢单后用户需要完成支付来确认订单。" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/help_bg_w"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="3. 美咖来了的服务流程？"
                android:textColor="#101119"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/help_dot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:text="用户只需一键选择立即服务或者预约服务，并填写相关信息并完成支付，就可以足不出户等待造型师上门服务了。" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/help_bg_w"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="4. 订单可以取消吗？"
                android:textColor="#101119"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/help_dot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:text="立即服务中如果订单没有被造型师抢单可以随时取消。预约服务中如果已经支付完成想要取消订单需要联系客服中心（400-107-1377）进行操作。" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/help_bg_w"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="5. 用户人身安全问题？"
                android:textColor="#101119"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/help_dot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:text="从用户的安全的方面考虑，“美咖来了”使用的保险是众安保险，是由蚂蚁金服、腾讯、中国平安等发起设立，是国内首家互联网保险公司， 并于2013年9月29日获中国保监会同意开业批复。所以，请您放心使用。" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/help_bg_w"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="6. 为用户免费投保金额及项目？"
                android:textColor="#101119"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/help_dot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:text="美咖来了为用户免费提供意外伤害保险5万元；人身权利侵害保险3万元；个人财产及随身物品损失保险5000元。共计投保8.5万元。" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/help_bg_w"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="7. 美咖来了造型师的专业度？"
                android:textColor="#101119"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/help_dot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:text="美咖来了造型师入职需要经过严格的面试、妆试及分级，邀请四位国家级造型导师担任专业技巧面试官。面试通过后进行系统的培训，所以美咖来了造型师团队是目前国内最具实力的真正大咖。" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/help_bg_w"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="8. 用户如何进行充值？"
                android:textColor="#101119"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/help_dot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:text="进入“美咖来了”，点击右下角“我的”，会显示“充值有礼”（粉色区域），点击后会显示充值按钮。" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/help_bg_w"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="9. 如何查看造型师的作品和获得的荣誉？"
                android:textColor="#101119"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/help_dot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:text="在“美咖来了”中，点击底栏 中的“造型师”，点开您想要查看的造型师，会出现造型师的相关资料，查看即可。" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/help_bg_w"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="10. 支付安全？"
                android:textColor="#101119"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/help_dot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:text="从用户支付安全的方面考虑，“美咖来了”使用的在线支付方式是支付宝及微信支付。" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
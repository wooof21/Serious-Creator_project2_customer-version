<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#101119"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4" >
    
    <LinearLayout
        android:id="@+id/bottom_fragment_ll1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/bottom_fragment_iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="2dp"
            android:src="@drawable/meika_sel" />

        <TextView
            android:id="@+id/fragment_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="美咖"
            android:textColor="#ff5b85"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bottom_fragment_qiangdang_underline"
            android:layout_width="55dp"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:background="#101119"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_fragment_ll2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/bottom_fragment_iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="2dp"
            android:src="@drawable/dingdan_un" />

        <TextView
            android:id="@+id/fragment_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="订单"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bottom_fragment_yuyue_underline"
            android:layout_width="55dp"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:background="#101119"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_fragment_ll3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/bottom_fragment_iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="2dp"
            android:src="@drawable/zxs_un" />

        <TextView
            android:id="@+id/fragment_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="造型师"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bottom_fragment_zhangdan_underline"
            android:layout_width="55dp"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:background="#101119"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_fragment_ll4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/bottom_fragment_iv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="2dp"
            android:src="@drawable/wode_un" />

        <TextView
            android:id="@+id/fragment_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="我的"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bottom_fragment_mine_underline"
            android:layout_width="55dp"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:background="#101119"
            android:visibility="invisible" />
    </LinearLayout>
    </LinearLayout>

    

</LinearLayout>